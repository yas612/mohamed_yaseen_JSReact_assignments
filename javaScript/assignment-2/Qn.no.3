//js file

var inputArray = [];
var size = 5;
function isEven(x){
  if(x%2==0){
    return true;
  }
  else {
    return false;
  }
}

for(var i=0; i<size; i++) {

	//Taking Input from user
	inputArray[i] = prompt('Enter Element ' + (i+1));
}


function find(inputArray){
  for(var j=0;j<size;j++){

    if(isEven(inputArray[j])){
      return inputArray[j];
      break;
    }
  }
}
document.write(find(inputArray));
